    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e2f44"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/judul"
